<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="16dp"
    android:clipToPadding="false">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/image_holod"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/holod"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/name_holod"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Холодное сердце"/>
        <Button
            android:id="@+id/holod"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Детали"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/image_zolushka"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/zolushka"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/name_zolushka"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Золушка"/>
        <Button
            android:id="@+id/zolushka"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Детали"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>